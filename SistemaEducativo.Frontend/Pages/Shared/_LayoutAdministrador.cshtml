<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>HOME</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />

    <!-- Font Awesome icons -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" />

    <!-- Theme CSS -->
    <link href="~/css/stylemenuEstudiante.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
              <a class="navbar-brand" asp-page="/Index">
                <img src="~/images/logo.png" alt="Logo" style="height: 4rem;" />
              </a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">

                    <!-- Gestión de Usuarios -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="usuariosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestión de Usuarios
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="usuariosDropdown">
                            <li><a class="dropdown-item" asp-page="/Usuarios/Activar">Activar cuentas de usuario</a></li>
                            <li><a class="dropdown-item" asp-page="/Usuarios/AsignarRol">Asignar roles</a></li>
                            <li><a class="dropdown-item" asp-page="/Usuarios/RecuperarPassword">Recuperación de contraseña</a></li>
                        </ul>
                    </li>

                    <!-- Parámetros del sistema -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="parametrosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Parámetros del Sistema
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="parametrosDropdown">
                            <li><a class="dropdown-item" asp-page="/Parametros/AniosPeriodos">Años y periodos lectivos</a></li>
                            <li><a class="dropdown-item" asp-page="/Parametros/TiposMatricula">Tipos de matrícula y costos</a></li>
                            <li><a class="dropdown-item" asp-page="/Parametros/CitaMatricula">Configuración de cita de matrícula</a></li>
                        </ul>
                    </li>

                    <!-- Gestión Académica -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="academicaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestión Académica
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="academicaDropdown">
                            <li><a class="dropdown-item" asp-page="/Academica/CarrerasPlanes">Carreras y planes de estudio</a></li>
                            <li><a class="dropdown-item" asp-page="/Academica/Materias">Materias</a></li>
                            <li><a class="dropdown-item" asp-page="/Academica/Requisitos">Requisitos y correquisitos</a></li>
                            <li><a class="dropdown-item" asp-page="/Academica/GruposHorarios">Grupos y horarios</a></li>
                        </ul>
                    </li>

                    <!-- Gestión de Profesores -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="profesoresDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestión de Profesores
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="profesoresDropdown">
                            <li><a class="dropdown-item" asp-page="/Profesores/AsignarMaterias">Asignar materias a profesores</a></li>
                            <li><a class="dropdown-item" asp-page="/Profesores/ReporteCarga">Ver reporte de carga académica</a></li>
                        </ul>
                    </li>

                    <!-- Matrícula y Pagos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="matriculaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Matrícula y Pagos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="matriculaDropdown">
                            <li><a class="dropdown-item" asp-page="/Matricula/Reporte">Ver reporte de matrícula</a></li>
                            <li><a class="dropdown-item" asp-page="/Pagos/Reporte">Ver pagos realizados</a></li>
                            <li><a class="dropdown-item" asp-page="/Pagos/DeudasPendientes">Ver deudas pendientes</a></li>
                        </ul>
                    </li>

                    <!-- Reportes y Bitácoras -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Reportes y Bitácoras
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="reportesDropdown">
                            <li><a class="dropdown-item" asp-page="/Reportes/EstudiantesActivos">Reporte de estudiantes activos</a></li>
                            <li><a class="dropdown-item" asp-page="/Reportes/BitacoraAccesos">Bitácora de accesos</a></li>
                            <li><a class="dropdown-item" asp-page="/Reportes/NotasRendimiento">Notas y rendimiento académico</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('@Url.Content("~/images/home-bg.png")')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Avatar Estudiantes - Colegio Universitario de Cartago</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>


    <!-- Footer -->
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="small text-center text-muted fst-italic">Derechos Reservados &copy; Avatar 2025</div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>